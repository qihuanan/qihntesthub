<view class="weui-flex weui-cell"  wx:for="{{weItemList}}" wx:key="key" wx:for-index="index" wx:for-item="item">
	<view class="weui-flex__item">
		<image  class="active-image" src="{{baseurl}}wx/showimg?filename={{item.picture1}}" data-lineid="{{item.id}}" bindtap="todetail"></image>
	</view>
	<view class="weui-flex__item" >
		<view class="cart-item-name">
			<view>{{item.name}}</view>
			
			<view class="weui-flex cart-item-price">
				<view class="weui-flex__item">
					<view style="color:red">￥{{item.price}} </view>
				</view>
				<view class="weui-flex__item">	
				<!-- 主容器 -->  
				<view class="stepper">  
						<!-- 减号 -->  
						<text class="{{minusStatus}}" bindtap="bindMinus">-</text>  
						<!-- 数值 -->  
						<input type="number" bindchange="bindManual" value="{{item.stocknum}}" />  
						<!-- 加号 -->  
						<text class="normal"  data-num="{{item.stocknum}}" bindtap="bindPlus">+</text>  
				</view> 
				
				</view>
			</view>

		</view>
	</view>
</view>


<wxs src="../../utils/filter.wxs" module="util"></wxs>
<view>
<image  wx:if="{{line.picture2}}" mode="widthFix"  bindtap="showimgTap" data-imgsrc="{{baseurl}}download?filename={{line.picture2}}" class="detailimg" src="{{baseurl}}download?filename={{line.picture2}}"></image>
</view>

<view style="height: 500rpx;" class="weui-flex ">
  <view class="weui-flex__item">
    <view class="item-text">
      <view class="active-title">
        <view class="active-title-top">
          {{line.name}}
          <mp-icon bindtap="taplike" data-lineid="{{line.id}}"  class="active-title-like" icon="like" type="{{line.like == '1' ? 'field' : 'outline' }}" color="red" size="{{35}}"></mp-icon>
        </view>
        
        <view class="active-title-bottom weui-flex">
          <view class="weui-flex__item">
              <view class="" bindtap="gopay" >需要行走</view>
              <view class="active-title-bottom-item">约{{line.changdu}}公里</view>
          </view>
          <view class="weui-flex__item">
              <view class="" >签到点数</view>
              <view class="active-title-bottom-item">{{line.dianshu}}</view>
          </view>
          <view class="weui-flex__item">
              <view class="">已获/总积分</view>
              <view class="active-title-bottom-item">{{line.yijifen }}/{{line.jifen}}</view>
          </view>
        </view>
        <!-- 
        <view class="active-title-bottom weui-flex">
          <view class="weui-flex__item ">
              <navigator url="/pages/message/message" class="item-liuyanban">留言板</navigator>
          </view>
          <view  class="weui-flex__item " bindtap="dakaflagtap"> 
              <navigator url="/pages/detailon/detail?lineid=1" class="item-liuyanban">开始签到</navigator>
          </view>
        </view>
        -->

       
        <view class="active-title-bottom weui-flex">
         <!-- 
          <view class="weui-flex__item ">
              <navigator url="/pages/message/message" >
                <image mode="aspectFit" src="/pages/images/btm-mes@3x.png" class="liuyanbandaka"></image>
              </navigator>
          </view>
          -->
          <view wx:if="{{line.id != 10}}"  class="weui-flex__item " open-type="share"> 
            <button  style="width:43vw" class="btn1" open-type="share">
            约朋友一起玩
            </button>

          </view>
          
          <view wx:if="{{line.id == 10}}"  class="weui-flex__item " bindtap="mrdatap" data-lineid="{{line.id}}"> 
            <button style="width:43vw" class="btn1">
            每日打卡
            </button>  
          </view> 
          <view  class="weui-flex__item " bindtap="dakaflagtap" data-lineid="{{line.id}}"> 
            <button style="width:43vw" class="btn1">
            开始探索
            </button>  
          </view>

        </view>

      </view>

      <view class="active-body">

        <view class="active-title-bottom weui-flex" style="height:50rpx;">
         <!-- <view  class="item-liuyanban"> </view>  -->
        </view>

      </view>

    </view>
  </view>
			
</view>
<view class='list'>
    <view class='li' wx:for='{{list}}' wx:key=''>{{item}}</view>
</view>
<view class="body-linedes" wx:if="{{line.description != ''}}">
  <text>
      {{util.format(line.description)}}
   </text>
 </view>
<view class='placeholder-view'></view>
<view >
 <image mode="widthFix" class='placeholder-view' src="/pages/images/slogan.svg"></image>
</view>
<view class="kefu-btn">
<button bindtap="gopay" class="kefu-btn2" style="width:40vw">
<view class="btntxt">加入活动</view></button>
</view>
